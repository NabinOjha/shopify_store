<section class="testimonials">
  <h2>What Our Customers Say</h2>
  
  {% for block in section.blocks %}
    <div class="testimonial">
      <img src="{{ block.settings.customer_image | img_url: 'medium' }}" alt="{{ block.settings.customer_name }}">
      <p>{{ block.settings.testimonial_text }}</p>
      <strong>{{ block.settings.customer_name }}</strong>
    </div>
  {% endfor %}
</section>

{% schema %}
{
  "name": "Custom Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Custom Section"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Custom Section Description"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial Block",
      "settings": [
        {
          "type": "text",
          "id": "customer_name",
          "label": "Customer Name"
        },
        {
          "type": "textarea",
          "id": "testimonial_text",
          "label": "Testimonial Text"
        },
        {
          "type": "image_picker",
          "id": "customer_image",
          "label": "Customer Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default Testimonials",
      "category": "Testimonials",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]

}
{% endschema %}
