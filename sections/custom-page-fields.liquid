{% form 'contact', class: 'newsletter-form' %}
  <h2>{{ section.settings.heading }}</h2>

  {% for block in section.blocks %}
      <div style="margin-top: 20px;">
        <div class="field">
          <label class="field__label">
              {{ block.settings.input | strip_html }} <!-- Display the rich text input as the label -->
          </label>
          <textarea
            name="contact[feedback]"
            class="field__input"
            aria-required="true"
            autocorrect="off"
            autocapitalize="off"
            placeholder="{{ 'newsletter.label' | t }}"
            required
          >{{ block.settings.input }}</textarea> <!-- Use a textarea for user feedback -->
        </div>
      </div>
  {% endfor %}
  
  <div class="contact__button" style="margin-top: 20px;">
    <button type="submit" class="button">
      {{ 'templates.contact.form.send' | t }}
    </button>
  </div>
{% endform %}

{% schema %}
{
  "name": "Feedback Form",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Feedback Form"
    }
  ],
  "blocks": [
    {
      "name": "Input",
      "type": "richtext", 
      "settings": [
        {
          "type": "richtext",
          "id": "input",
          "label": "Feedback Input"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.contact-form.presets.name",
      "blocks": [
        {
          "type": "richtext"
        }
      ]
    }
  ]
}
{% endschema %}

