<div>
    {% form 'contact', class: 'newsletter-form' %}
      {% for block in section.blocks %}
          <div style="margin-top: 20px;">
            <div class="field">
              <input
                type="email"
                name="contact[email]"
                class="field__input"
                value="{{ form.email }}"
                aria-required="true"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                placeholder="{{ 'newsletter.label' | t }}"
                required
              >
              <label class="field__label">
                {{ 'newsletter.label' | t }}
              </label>
            </div>
          </div>
      {% endfor %}
    {% endform %}
</div>

{% schema %}
{
  "name": "Custom Section",
  "tag": "section",
  "class": "custom-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "My Custom Section"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    }
  ]
}
{% endschema %}
